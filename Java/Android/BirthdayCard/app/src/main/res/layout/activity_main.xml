<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    layout_width="match_parent"
    layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        id="@+id/ImageView_AndroidParty" layout_width="match_parent" layout_height="match_parent"
        contentDescription="Image Representing a Party" scaleType="centerCrop" src="@drawable/androidparty" />

    <TextView
        id="@+id/TextView_HBD" layout_width="match_parent" layout_height="wrap_content"
        fontFamily="sans-serif-light" padding="20sp" text="Happy Birthday, Dilip!"
        textColor="@android:color/white" textSize="36sp" />

    <TextView
        id="@+id/TextView_MOM" layout_width="wrap_content" layout_height="wrap_content"
        layout_alignParentRight="true" layout_alignParentBottom="true" fontFamily="sans-serif-light"
        padding="20sp" text="From, Mom!" textColor="@android:color/white" textSize="36sp" />


</RelativeLayout>